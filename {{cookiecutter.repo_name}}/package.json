{
  "name": "{{ cookiecutter.repo_name }}",
  "version": "0.1.0",
  "description": "{{ cookiecutter.description }}",
  "scripts": {
    "build": "gulp build:production",
    "lint": "stylelint ./{{ cookiecutter.package_name }}/static_src/scss/**/*.scss && eslint ./{{ cookiecutter.package_name }}/static_src/js/**/*.js",
    "dev": "gulp watch",
    "postinstall": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run build; fi",
    "tinify": "gulp tinify"
  },
  "author": "{{ cookiecutter.author }}",
  "dependencies": {
    "autoprefixer": "6.1.0",
    "babel-core": "6.9.1",
    "babel-plugin-syntax-trailing-function-commas": "6.5.0",
    "babel-preset-es2015": "6.1.4",
    "babelify": "7.2.0",
    "browserify": "12.0.1",
    "browserify-shim": "3.8.12",
    "del": "2.0.2",
    "eslint": "2.7.0",
    "eslint-config-airbnb": "6.2.0",
    "eslint-plugin-react": "4.3.0",
    "foundation-sites": "6.2.3",
    "gulp": "3.9.0",
    "gulp-clean-css": "2.0.4",
    "gulp-header": "1.8.2",
    "gulp-plumber": "1.1.0",
    "gulp-postcss": "6.0.1",
    "gulp-sass": "2.1.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-tinify": "1.0.2",
    "gulp-uglify": "1.4.2",
    "gulp-util": "3.0.6",
    "jquery": "3.0.0",
    "run-sequence": "1.1.4",
    "stylelint": "7.6.0",
    "stylelint-config-standard": "11.0.0",
    "stylelint-selector-bem-pattern": "1.0.0",
    "uglifyify": "3.0.1",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0"
  },
  "devDependencies": {
    "browser-sync": "2.10.0",
    "watchify": "3.6.0"
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation": "./node_modules/foundation-sites/js/foundation.core.js",
    "foundation-mediaquery": "./node_modules/foundation-sites/js/foundation.util.mediaQuery.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation": { "exports": "Foundation",  "depends": "jquery" },
    "foundation-mediaquery": { "depends": "foundation" }
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "engines": {
    "npm": "^3",
    "node": "^6"
  }
}
